property newServerAcceptRef ${nukleus:newRouteRef()} # external scope
property boundAddress ${socks:socksAddress()
                             .localhostIpv4()
                             .port(8080)
                             .build()}

connect await ROUTED_SERVER "nukleus://socks/streams/source"
  option nukleus:route ${newServerAcceptRef}
  option nukleus:window 65536
  option nukleus:transmission "duplex"
connected

## Write the request bytes for connecting with no-authentication
write [0x05]
write [0x01]
write [0x00]

## Read the response, expect success
read [0x05 0x00]

## Write CONNECT request
write [0x05] # version: SOCKS v5
write [0x04] # command not recognized
write [0x00] # RSV field
write ${socks:socksAddress()
             .domainName("example.com")
             .port(8080)
             .build()}


## Read CONNECT response
read [0x05] # version: SOCKS v5
read [0x07] # command not supported
read [0x00] # RSV field

read ${boundAddress}
